<Window x:Class="MyProjectRecipeBook.MuffinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProjectRecipeBook"
        mc:Ignorable="d"
        Title="MuffinWindow" Height="450" Width="800">

    <DockPanel>

        <Menu DockPanel.Dock="Top" Background="RosyBrown" Height="28">
            <ToolBarTray Background="RosyBrown" DockPanel.Dock="Top">
                <ToolBar Background="RosyBrown">
                    <Button Command="Cut" ToolTip="Cut selection to Windows Clipboard.">
                        <Image Source="icons8-schere-16.png" Height="14" />
                    </Button>
                    <Button Command="Copy" ToolTip="Copy selection to Windows Clipboard.">
                        <Image Source="icons8-dokumente-48.png" Height="20" Width="35" />
                    </Button>
                    <Button Command="Paste" ToolTip="Paste from Windows Clipboard.">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="icons8-paste-50.png" Height="13" Width="33" />
                            
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
            <Button Background="{Binding Farbe}" FontFamily="Arial" FontWeight="Bold" >Change background color
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
            <ComboBox SelectedValue="{Binding Farbe}"
                  ItemsSource="{Binding Farben}">
            </ComboBox>

        </Menu>

        <StackPanel Background="{Binding Farbe}">
            <Image Source="muffinsrecipe.png" Height="347" Width="682" ></Image>
            <Button Click="Button_Click" Content="Go back to main menu"  Height="32" Width="152" Background="RosyBrown">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>

            </Button>

        </StackPanel>
        <StackPanel Background="{Binding Farbe}">

        </StackPanel>
    </DockPanel>
</Window>
